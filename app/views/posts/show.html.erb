<div class="container">
<h3>By: <%= @post.user.first_name %> <%= @post.user.last_name %></h3>
<%= image_tag("#{@post.user.profile_pic}") %>
<h4><%= @post.title %></h4>
<h4><%= @post.content %></h4>


<% if @post.user == current_user %>
	<%= link_to 'Edit', edit_city_post_path(@post.city.id, @post) %>
  <%= form_for @post, url: "/cities/#{@post.city.id}/posts/#{@post.id}", method: "DELETE" do |f| %>
    <%= f.submit "Delete", data: { confirm: "Are you sure you want to delete #{@post.title}?"} %>
  <% end -%>
<% end -%>
</div>
