<h1>USERS PAGE</h1>
<%= @user.first_name %>
<%= @user.last_name %>
<%= @user.current_city %>
<%= @user.email %>

<% if @user.profile_pic? %>
	<%= @user.profile_pic %>
<% end -%>

<ol>
	<% @posts.each do |post| %>
		<li>
			<%= post.title %>
			<br />
			<%= post.content %>
		</li>
			<%= link_to 'Edit', edit_city_post_path(post.city.id, post) %>
	<% end -%>
</ol>